<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>TapQuest ‚Äì Reinos de TON</title>
<script src="https://telegram.org/js/telegram-web-app.js"></script>

<style>
*{box-sizing:border-box}
body{
  margin:0;
  font-family:system-ui,Arial;
  background:radial-gradient(circle at top,#071a33,#020617);
  color:#fff;
  text-align:center;
}

/* ================= UI ================= */
.screen{display:none;padding:16px}
.show{display:block}

.card{
  background:#0f2a52;
  border-radius:18px;
  padding:14px;
  margin-bottom:14px;
}

button{
  width:100%;
  padding:14px;
  border:none;
  border-radius:16px;
  font-size:17px;
  font-weight:bold;
  margin-top:10px;
  cursor:pointer;
}
.play{background:linear-gradient(180deg,#2ecc71,#27ae60)}
.tap{background:linear-gradient(180deg,#4aa3ff,#2d7bff)}
.back{background:#555}

/* ================= BARS ================= */
.bar{
  width:100%;
  height:14px;
  background:#1a1a1a;
  border-radius:10px;
  overflow:hidden;
  margin:6px 0;
}
.fill{height:100%;transition:.2s}
.hp{background:linear-gradient(90deg,#ff5252,#ff1744)}
.xp{background:linear-gradient(90deg,#ffd54f,#fbc02d)}

/* ================= SPRITES ================= */
.sprite{
  width:96px;
  height:96px;
  margin:20px auto;
  image-rendering:pixelated;
  background-repeat:no-repeat;
}

/* HERO */
.hero-idle{
  background-image:url("assets/hero_idle.png");
  animation:heroIdle .8s steps(6) infinite;
}
.hero-attack{
  background-image:url("assets/hero_attack.png");
  animation:heroAttack .8s steps(8) forwards;
}

/* ENEMY */
.enemy-idle{
  background-image:url("assets/enemy_idle.png");
  animation:enemyIdle .8s steps(6) infinite;
}
.enemy-hit{
  background-image:url("assets/enemy_hit.png");
  animation:enemyHit .5s steps(4) forwards;
}

/* Animations */
@keyframes heroIdle{100%{background-position:-576px}}
@keyframes heroAttack{100%{background-position:-768px}}
@keyframes enemyIdle{100%{background-position:-576px}}
@keyframes enemyHit{100%{background-position:-384px}}

/* Damage text */
.float{
  position:absolute;
  left:50%;
  transform:translateX(-50%);
  font-weight:bold;
  animation:floatUp .8s forwards;
}
@keyframes floatUp{
  to{opacity:0;transform:translate(-50%,-40px)}
}
</style>
</head>

<body>

<!-- ========== MENU ========== -->
<div id="menu" class="screen show">
  <h1>‚öîÔ∏è TapQuest</h1>

  <div class="card">
    Nivel <b id="level">1</b><br>
    XP <b id="xp">0</b>/100
    <div class="bar"><div id="xpBar" class="fill xp"></div></div>
    üíé TapCoin: <b id="coin">0</b>
  </div>

  <button class="play" onclick="startGame()">üå≤ Entrar al Bosque</button>
</div>

<!-- ========== GAME ========== -->
<div id="game" class="screen">
  <h2>üå≤ Bosque</h2>

  ‚ù§Ô∏è Enemigo
  <div class="bar"><div id="enemyHpBar" class="fill hp"></div></div>

  <div id="enemy" class="sprite enemy-idle"></div>
  <div id="hero" class="sprite hero-idle"></div>

  <button class="tap" onclick="attack()">‚öîÔ∏è ATACAR</button>
  <button class="back" onclick="backMenu()">‚¨ÖÔ∏è Volver</button>
</div>

<script>
Telegram.WebApp.ready();

/* ================= DATA ================= */
let data = JSON.parse(localStorage.getItem("tapquest")) || {
  level:1, xp:0, coin:0
};
let enemyHp = 100;

/* ================= UI ================= */
function updateMenu(){
  level.textContent = data.level;
  xp.textContent = data.xp;
  coin.textContent = data.coin;
  xpBar.style.width = (data.xp)+"%";
}
function updateGame(){
  enemyHpBar.style.width = enemyHp+"%";
}
function save(){
  localStorage.setItem("tapquest",JSON.stringify(data));
}

/* ================= NAV ================= */
function startGame(){
  menu.classList.remove("show");
  game.classList.add("show");
  enemyHp = 100;
  updateGame();
}
function backMenu(){
  game.classList.remove("show");
  menu.classList.add("show");
  updateMenu();
}

/* ================= COMBAT ================= */
function attack(){
  const hero = document.getElementById("hero");
  const enemy = document.getElementById("enemy");

  hero.className = "sprite hero-attack";
  enemy.className = "sprite enemy-hit";

  let dmg = Math.floor(Math.random()*8)+6;
  enemyHp -= dmg;

  let f = document.createElement("div");
  f.className = "float";
  f.textContent = "-" + dmg;
  enemy.appendChild(f);
  setTimeout(()=>f.remove(),800);

  if(enemyHp <= 0){
    enemyHp = 100;
    data.xp += 20;
    data.coin += 5;

    if(data.xp >= 100){
      data.xp = 0;
      data.level++;
    }
  }

  setTimeout(()=>{
    hero.className = "sprite hero-idle";
    enemy.className = "sprite enemy-idle";
    updateGame();
    updateMenu();
    save();
  },600);
}

updateMenu();
save();
</script>
</body>
</html>
